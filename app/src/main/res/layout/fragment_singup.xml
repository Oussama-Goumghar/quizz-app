<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bluerbk"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_gravity="center"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/textView"
                android:layout_width="212dp"
                android:layout_height="95dp"
                android:src="@drawable/addettuda" />

            <com.google.android.material.textfield.TextInputLayout
                app:shapeAppearance="@style/Rounded"
                app:endIconTint="@color/black"
                android:id="@+id/nomEdit"
                app:startIconDrawable="@drawable/ic_baseline_person_24"
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:ems="10"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Nom"
                app:boxStrokeColor="@color/white"
                app:hintTextColor="@color/white"
                android:inputType="textPersonName"
                android:padding="15dp"

                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pernomEdit"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                app:shapeAppearance="@style/Rounded"
                app:endIconTint="@color/black"
                app:startIconDrawable="@drawable/ic_baseline_person_24"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Pernom"
                android:inputType="textPersonName"
                app:boxStrokeColor="@color/white"
                android:padding="15dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtusernam"
                app:startIconDrawable="@drawable/ic_baseline_person_24"
                android:layout_width="299dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:shapeAppearance="@style/Rounded"
                app:endIconTint="@color/black"
                android:ems="10"
                android:hint="Username"
                android:inputType="textPersonName"
                android:padding="15dp"
                app:boxStrokeColor="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtpassword"
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:shapeAppearance="@style/Rounded"
                app:endIconTint="@color/black"
                android:layout_marginBottom="10dp"
                android:ems="10"
                app:endIconMode="password_toggle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Password"
                app:startIconDrawable="@drawable/ic_baseline_visibility_off_24"
                android:inputType="textPassword"
                android:padding="15dp"
                app:boxStrokeColor="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    />

            </com.google.android.material.textfield.TextInputLayout>




            <ImageView
                android:id="@+id/addImg"
                android:layout_marginBottom="12dp"
                android:layout_width="67dp"
                android:layout_height="47dp"
                android:src="@drawable/addimage"
                />

            <TextView
                android:layout_marginTop="0dp"
                android:id="@+id/btnSingUp"
                android:layout_width="310dp"
                android:layout_height="56dp"
                android:background="@drawable/btnbk"
                android:paddingTop="10dp"
                android:text="Add"
                android:textAlignment="center"
                android:textSize="20sp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating__button_chap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="bottom|right"
                android:backgroundTint="#b4ffff"
                app:srcCompat="@drawable/exit" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>



